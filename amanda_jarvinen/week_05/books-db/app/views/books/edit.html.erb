<h2>Edit <%= @book.title %></h2>

<%= form_with model: @book, local: true, method: 'post' do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :author %>
<%= f.text_field :author %>
<br>
<br>

<%= f.label :description %>
<%= f.text_field :description %>
<br>
<br>

<%= f.label :image_url, 'Image URL' %>
<%= f.text_field :image_url %>
<br>
<br>
<%= f.submit 'Update book' %>
<% end %>
